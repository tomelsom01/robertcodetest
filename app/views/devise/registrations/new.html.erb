
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Register</h2>
        <div class="card">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}, html: {class: 'form-horizontal p-3'}) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :first_name, required: true, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control' } %>
              <%= f.input :last_name, required: true, wrapper_html: { class: 'mb-3' }, input_html: { class: 'form-control' } %>
              <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
              <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
            </div>
        <% end %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
