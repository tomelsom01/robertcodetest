<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Log in</h2>
      <div class="card p-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control' },
                        wrapper_html: { class: 'mb-3' } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'form-control' },
                        wrapper_html: { class: 'mb-3' } %>
            <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'mb-3' } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
